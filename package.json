    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.15.0",
    "postcss": "^8.5.2",
    "prettier": "^3.5.1",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.20.1",
    "svelte-check": "^4.1.4",
    "tailwindcss": "^4.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0"
