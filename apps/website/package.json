{
  "name": "martinbroder.com",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev --port 3000",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "preview": "vite preview",
    "s3-deploy:dev": "aws s3 sync ./build s3://dev.martinbroder.com --delete",
    "s3-deploy:production": "aws s3 sync ./build s3://www.martinbroder.com --delete",
    "sync:dev": "bun run build -- --mode dev && bun run s3-deploy:dev",
    "sync:production": "bun run build -- --mode production && bun run s3-deploy:production"
  },
  "dependencies": {
    "@effect/ai": "^0.16.3",
    "@effect/ai-openai": "^0.19.3",
    "@effect/platform": "^0.82.2",
    "@effect/platform-bun": "^0.64.3",
    "@effect/platform-node": "^0.80.3",
    "@statelyai/inspect": "^0.4.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.21.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/vite": "^4.1.6",
    "@types/eslint": "^9.6.1",
    "@xstate/svelte": "^4.0.4",
    "effect": "^3.15.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.6.0",
    "globals": "^16.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.30.1",
    "svelte-check": "^4.2.0",
    "tailwindcss": "^4.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "xstate": "^5.19.3"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "schema-dts": "^1.1.5"
  }
}
